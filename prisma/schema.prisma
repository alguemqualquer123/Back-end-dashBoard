generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  avatar   String?
  Licenses Licenses[]
  currentCode String?
}

model Admin {
  id       Int    @id @default(autoincrement())
  role     String
  email    String @unique
}


model Licenses {
  id        Int      @id @default(autoincrement())
  resource  String
  license   String   @unique
  ip        String
  time      DateTime
  expiredIn DateTime
  price     Int @default(0)
  userId    Int? // Chave estrangeira que referencia o User
  user      User?    @relation(fields: [userId], references: [id])///
}

